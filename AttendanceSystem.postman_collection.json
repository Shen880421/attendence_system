  },
  "item": [
    {
      "name": "登入",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "打卡",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{JWT}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/attendance/clock",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "attendance", "clock"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"clock_in\",\n  \"location\": \"25.034,121.564\"\n}"
        }
      }
    },
    {
      "name": "查詢出勤紀錄",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{JWT}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/attendance/history?start=2025-07-01&end=2025-07-31",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "attendance", "history"],
          "query": [
            {
              "key": "start",
              "value": "2025-07-01"
            },
            {
              "key": "end",
              "value": "2025-07-31"
            }
          ]
        }
      }
    }
  ]
